{
  "name": "playing-with-cra-flow",
  "version": "0.1.0",
  "private": true,
  "runjs": {
    "requires": [
      "./node_modules/babel-register"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "arrowParens": "avoid",
    "singleQuote": true,
    "semi": false,
    "printWidth": 80
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index -g"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --config package.json --write",
      "git add"
    ]
  },
  "scripts": {
    "start": "cross-env REACT_EDITOR=webstorm react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "sg": "styleguidist server --open",
    "sgb": "styleguidist build",
    "z": "docz dev",
    "zb": "docz build"
  },
  "dependencies": {
    "@reach/component-component": "^0.1.1",
    "@reach/dialog": "^0.1.2",
    "@reach/router": "^1.1.1",
    "chance": "^1.0.16",
    "classnames": "^2.2.6",
    "constate": "^0.8.1",
    "debug": "^3.1.0",
    "faker": "^4.1.0",
    "ramda": "^0.25.0",
    "ramda-adjunct": "^2.9.0",
    "react": "^16.5.0",
    "react-dom": "^16.5.0",
    "react-icons-kit": "^1.1.7",
    "react-scripts": "1.1.5",
    "reakit": "^0.14.5",
    "recompose": "^0.30.0",
    "styled-components": "^3.4.5",
    "styled-tools": "^1.5.1",
    "tachyons": "^4.11.1",
    "xstate": "^3.3.3"
  },
  "devDependencies": {
    "@types/prop-types": "^15.5.5",
    "@types/ramda": "^0.25.37",
    "@types/react-dom": "^16.0.7",
    "@types/recompose": "^0.26.4",
    "cross-env": "^5.2.0",
    "flow-bin": "^0.80.0",
    "fuse-box": "^3.5.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "react-cosmos": "^4.6.4",
    "typescript": "^3.0.3",
    "uglify-es": "^3.3.9",
    "uglify-js": "^3.4.9"
  }
}
