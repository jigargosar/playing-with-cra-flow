{
  "name": "playing-with-cra-flow",
  "version": "0.1.0",
  "private": true,
  "runjs": {
    "requires": [
      "./node_modules/babel-register"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "arrowParens": "avoid",
    "singleQuote": true,
    "semi": false,
    "printWidth": 80
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index -g"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --config package.json --write",
      "git add"
    ]
  },
  "scripts": {
    "start": "nodemon -w yarn.lock -x cross-env REACT_EDITOR=webstorm react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@reach/component-component": "^0.1.1",
    "@reach/dialog": "^0.1.2",
    "@reach/router": "^1.1.1",
    "chance": "^1.0.16",
    "classnames": "^2.2.6",
    "csstips": "^0.3.0",
    "csx": "^9.0.0",
    "debug": "^4.0.1",
    "faker": "^4.1.0",
    "normalize.css": "^8.0.0",
    "ramda": "^0.25.0",
    "ramda-adjunct": "^2.10.0",
    "react": "^16.5.1",
    "react-dom": "^16.5.1",
    "react-icons-kit": "^1.1.7",
    "react-scripts": "1.1.5",
    "recompose": "^0.30.0",
    "selectn": "^1.1.2",
    "tachyons": "^4.11.1",
    "typestyle": "^2.0.1"
  },
  "devDependencies": {
    "@types/prop-types": "^15.5.5",
    "@types/ramda": "^0.25.38",
    "@types/react-dom": "^16.0.7",
    "@types/recompose": "^0.26.5",
    "cross-env": "^5.2.0",
    "flow-bin": "^0.80.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.2"
  }
}
